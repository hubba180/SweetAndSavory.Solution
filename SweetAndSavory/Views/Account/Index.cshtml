@using System.Security.Claims

@if (User.Identity.IsAuthenticated)
{
    <h2>Hello @User.Identity.Name</h2>

    <p>Your Added Treats: </p>

    <ul>
        @foreach (var item in Model)
        {
            <li>@Html.ActionLink($"{item.Name}", "Details", "Treat", new { id = item.TreatId})</li>
        } 
    </ul>

    @Html.ActionLink("See all Flavors", "Index", "Flavor")<br>
    @Html.ActionLink("See all Treats", "Index", "Treat")<br>
    @Html.ActionLink("Create a Treat", "Create", "Treat")<br>
    @Html.ActionLink("Create a Flavor", "Create", "Flavor")<br>
    @using (Html.BeginForm("LogOff", "Account"))
    {
        <input type="submit" class="btn btn-default" value="Log out" />
    }
}
else
{
    <p>@Html.ActionLink("Register", "Register")</p>
    <p>@Html.ActionLink("Log in", "Login")</p>
}

<p>@Html.ActionLink("Home", "Index", "Home")</p>